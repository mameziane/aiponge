{
  "family": "aiponge-api-gateway",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "${AWS_ECS_EXECUTION_ROLE_ARN}",
  "taskRoleArn": "${AWS_ECS_TASK_ROLE_ARN}",
  "containerDefinitions": [
    {
      "name": "api-gateway",
      "image": "${AWS_ECR_REGISTRY}/aiponge-api-gateway:${IMAGE_TAG}",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        { "name": "NODE_ENV", "value": "production" },
        { "name": "PORT", "value": "3000" },
        { "name": "CLUSTER_WORKERS", "value": "auto" },
        { "name": "SHUTDOWN_TIMEOUT_MS", "value": "30000" },
        { "name": "MAINTENANCE_MODE", "value": "false" },
        { "name": "MAINTENANCE_RETRY_AFTER", "value": "300" },
        { "name": "SSE_HEARTBEAT_MS", "value": "30000" },
        { "name": "SENTRY_TRACES_SAMPLE_RATE", "value": "0.1" },
        { "name": "RATE_LIMIT_WINDOW_MS", "value": "900000" },
        { "name": "RATE_LIMIT_MAX_REQUESTS", "value": "100" },
        { "name": "BODY_SIZE_LIMIT", "value": "10mb" },
        { "name": "CACHE_TTL_DEFAULT", "value": "300" }
      ],
      "secrets": [
        { "name": "DATABASE_URL", "valueFrom": "${AWS_SECRETS_ARN}:DATABASE_URL::" },
        { "name": "REDIS_URL", "valueFrom": "${AWS_SECRETS_ARN}:REDIS_URL::" },
        { "name": "JWT_SECRET", "valueFrom": "${AWS_SECRETS_ARN}:JWT_SECRET::" },
        { "name": "INTERNAL_SERVICE_SECRET", "valueFrom": "${AWS_SECRETS_ARN}:INTERNAL_SERVICE_SECRET::" },
        { "name": "REDIS_CLUSTER_NODES", "valueFrom": "${AWS_SECRETS_ARN}:REDIS_CLUSTER_NODES::" }
      ],
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:3000/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/aiponge-api-gateway",
          "awslogs-region": "${AWS_REGION}",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
