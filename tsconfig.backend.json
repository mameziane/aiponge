{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "allowJs": false,
    "noEmit": false,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["node"],
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@aiponge/shared-contracts": ["packages/shared/contracts/src/index.ts"],
      "@aiponge/shared-contracts/*": ["packages/shared/contracts/src/*"],
      "@aiponge/platform-core": ["packages/platform-core/src/index.ts"],
      "@aiponge/platform-core/*": ["packages/platform-core/src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
