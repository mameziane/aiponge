# Aiponge Platform Core - Environment Variables
# Source of truth: packages/platform-core/src/config/environment-config.ts
# These variables are used by @aiponge/platform-core shared utilities.

# =============================================================================
# HTTP Client Timeouts (all values in milliseconds)
# =============================================================================

# Health check configuration
HEALTH_CHECK_TIMEOUT_MS=5000
HEALTH_CHECK_RETRIES=1

# Internal service-to-service communication
INTERNAL_SERVICE_TIMEOUT_MS=10000
INTERNAL_SERVICE_RETRIES=3

# External API calls (third-party APIs)
EXTERNAL_SERVICE_TIMEOUT_MS=30000
EXTERNAL_SERVICE_RETRIES=2

# AI provider requests (OpenAI, MusicAPI, etc. - longer timeout for generation)
AI_REQUEST_TIMEOUT_MS=120000
AI_REQUEST_RETRIES=2

# Storage service operations
STORAGE_SERVICE_TIMEOUT_MS=30000
STORAGE_SERVICE_RETRIES=3

# =============================================================================
# AI Provider Base URLs
# =============================================================================

OPENAI_BASE_URL=https://api.openai.com/v1
ANTHROPIC_BASE_URL=https://api.anthropic.com
ELEVENLABS_BASE_URL=https://api.elevenlabs.io/v1
MUSICAPI_BASE_URL=https://api.musicapi.ai

# =============================================================================
# Service URLs (optional overrides)
# =============================================================================
# Ports are auto-resolved from ServiceLocator (via service-manifest.cjs).
# Only set these to override for production or custom deployments.
# SERVICE_HOST=localhost
# SYSTEM_SERVICE_URL=http://system-service:3001
# STORAGE_SERVICE_URL=http://storage-service:3002
# USER_SERVICE_URL=http://user-service:3003
# AI_CONFIG_SERVICE_URL=http://ai-config-service:3004
# AI_CONTENT_SERVICE_URL=http://ai-content-service:3005
# AI_ANALYTICS_SERVICE_URL=http://ai-analytics-service:3006
# MUSIC_SERVICE_URL=http://music-service:3007
# API_GATEWAY_URL=http://api-gateway:8080

# =============================================================================
# Monitoring & Error Tracking
# =============================================================================

SENTRY_DSN=

# =============================================================================
# OpenTelemetry Distributed Tracing
# =============================================================================

OTEL_TRACING_ENABLED=false
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces
