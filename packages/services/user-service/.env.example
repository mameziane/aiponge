# Aiponge User Service - Environment Variables
# Source of truth: packages/platform-core/src/config/environment-config.ts

# =============================================================================
# Core Configuration
# =============================================================================

NODE_ENV=development
# PORT is auto-configured from service-manifest

# =============================================================================
# Database (Required)
# =============================================================================

DATABASE_URL=postgresql://localhost:5432/aiponge_dev

# =============================================================================
# Authentication (Required)
# =============================================================================

# JWT signing secret (min 32 chars)
# Generate: openssl rand -base64 32
JWT_SECRET=your-secret-key-here

# Secret for inter-service communication
INTERNAL_SERVICE_SECRET=your-internal-service-secret-here

# AES-256-GCM key for data encryption
ENTRY_ENCRYPTION_KEY=your-entry-encryption-key-here

# =============================================================================
# Security
# =============================================================================

# BCRYPT_ROUNDS=12
# ALLOWED_ORIGINS=http://localhost:5000,http://localhost:3000

# Encryption key for thought/journal entries
# THOUGHT_ENCRYPTION_KEY=your-thought-encryption-key-here

# =============================================================================
# Email (SendGrid)
# =============================================================================

# SENDGRID_API_KEY=your-sendgrid-api-key-here
# EMAIL_FROM=noreply@aiponge.com

# =============================================================================
# Payments (RevenueCat)
# =============================================================================

# REVENUECAT_API_KEY=your-revenuecat-api-key-here
# REVENUECAT_WEBHOOK_SECRET=your-revenuecat-webhook-secret-here

# =============================================================================
# Monitoring & Error Tracking
# =============================================================================

SENTRY_DSN=
# ANALYTICS_SERVICE_API_KEY=

# =============================================================================
# Logging
# =============================================================================

LOG_LEVEL=info

# =============================================================================
# OpenTelemetry Distributed Tracing
# =============================================================================

OTEL_TRACING_ENABLED=false
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces
