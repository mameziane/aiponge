{
  "name": "@aiponge/user-service",
  "version": "1.0.0",
  "description": "Unified user service combining authentication, profiles, and user intelligence",
  "type": "module",
  "main": "src/main.ts",
  "types": "src/main.ts",
  "scripts": {
    "build": "node esbuild.config.mjs",
    "dev": "NODE_OPTIONS=\"--conditions=development\" tsx src/main.ts",
    "dev:watch": "NODE_OPTIONS=\"--conditions=development\" tsx watch src/main.ts",
    "start": "node dist/main.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "lint:check": "eslint 'src/**/*.ts' --quiet",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "type-check": "tsc --noEmit --strict",
    "quality-check": "npm run lint:check && npm run format:check && npm run type-check",
    "architectural-lint": "node ../../../scripts/architectural-lint.js",
    "full-quality-check": "npm run quality-check && npm run architectural-lint",
    "db:push": "drizzle-kit push",
    "db:push:force": "drizzle-kit push --force",
    "migrate:lyrics": "tsx scripts/migrate-lyrics-timestamps.ts"
  },
  "dependencies": {
    "@aiponge/platform-core": "*",
    "@aiponge/shared-contracts": "*",
    "axios": "^1.13.6",
    "bcryptjs": "^3.0.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^17.3.1",
    "drizzle-orm": "^0.45.1",
    "drizzle-zod": "^0.8.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.17.3",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.0",
    "uuid": "^13.0.0",
    "winston": "^3.15.0",
    "ws": "^8.14.2",
    "zod": "^4.3.6"
  },
  "keywords": [
    "user-profile",
    "authentication",
    "profiles",
    "microservice",
    "typescript"
  ],
  "author": "aiponge",
  "license": "MIT",
  "devDependencies": {
    "@aiponge/test-utils": "*",
    "@types/express-session": "^1.17.10"
  }
}
