# Aiponge Music Service - Environment Variables
# Source of truth: packages/platform-core/src/config/environment-config.ts

# =============================================================================
# Core Configuration
# =============================================================================

NODE_ENV=development
HOST=0.0.0.0

# =============================================================================
# Database (Required - falls back to DATABASE_URL in development)
# =============================================================================

MUSIC_DATABASE_URL=postgresql://user:password@localhost:5432/aiponge_music
# DATABASE_URL=postgresql://user:password@localhost:5432/aiponge

# =============================================================================
# Authentication (Required)
# =============================================================================

# JWT signing secret (min 32 chars)
JWT_SECRET=your-secure-jwt-secret-min-32-chars

# Secret for inter-service communication
INTERNAL_SERVICE_SECRET=your-internal-service-secret-here

# AES-256-GCM key for data encryption
ENTRY_ENCRYPTION_KEY=your-entry-encryption-key-here

# =============================================================================
# AI Providers
# =============================================================================

# OpenAI (GPT, Whisper for lyrics timing)
OPENAI_API_KEY=your-openai-api-key

# Anthropic (Claude - optional alternative)
# ANTHROPIC_API_KEY=your-anthropic-api-key

# Google AI (Gemini - optional)
# GOOGLE_API_KEY=your-google-api-key

# ElevenLabs (Voice synthesis)
# ELEVENLABS_API_KEY=your-elevenlabs-api-key

# Stability AI (Album art generation)
# STABILITY_AI_API_KEY=your-stability-ai-api-key

# =============================================================================
# Music Generation (MusicAPI.ai)
# =============================================================================

MUSICAPI_API_KEY=your-musicapi-key
MUSICAPI_BASE_URL=https://api.musicapi.ai
# MUSIC_API_MAX_CONCURRENCY=10

# =============================================================================
# File Storage (AWS S3)
# =============================================================================

# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# S3_BUCKET=aiponge-storage
# CDN_URL=https://cdn.aiponge.com

# =============================================================================
# Service Discovery
# =============================================================================

SERVICE_HOST=localhost
# AI_CONFIG_SERVICE_URL=http://localhost:3004
# STORAGE_SERVICE_URL=http://localhost:3002

# =============================================================================
# CORS Configuration
# =============================================================================

# CORS_ALLOWED_ORIGINS=http://localhost:5000,http://localhost:3000

# =============================================================================
# Monitoring & Error Tracking
# =============================================================================

SENTRY_DSN=
# ANALYTICS_SERVICE_API_KEY=

# =============================================================================
# Logging
# =============================================================================

LOG_LEVEL=info

# =============================================================================
# OpenTelemetry Distributed Tracing
# =============================================================================

OTEL_TRACING_ENABLED=false
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces
