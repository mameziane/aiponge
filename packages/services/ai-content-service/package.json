{
  "name": "@aiponge/ai-content-service",
  "type": "module",
  "version": "1.0.0",
  "description": "Content generation and LLM processing microservice for aiponge platform",
  "main": "src/main.ts",
  "types": "src/main.ts",
  "scripts": {
    "build": "node esbuild.config.mjs",
    "dev": "NODE_OPTIONS=\"--conditions=development\" tsx src/main.ts",
    "dev:watch": "NODE_OPTIONS=\"--conditions=development\" tsx watch src/main.ts",
    "typecheck": "tsc --noEmit",
    "start": "node dist/main.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "lint:check": "eslint 'src/**/*.ts' --quiet",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "type-check": "tsc --noEmit --strict",
    "quality-check": "npm run lint:check && npm run format:check && npm run type-check",
    "architectural-lint": "node ../../../scripts/architectural-lint.js",
    "full-quality-check": "npm run quality-check && npm run architectural-lint",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@aiponge/platform-core": "*",
    "@aiponge/shared-contracts": "*",
    "axios": "^1.12.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.44.7",
    "drizzle-zod": "^0.5.1",
    "express": "^4.21.1",
    "express-rate-limit": "^7.4.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.7.0",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "handlebars": "^4.7.8",
    "uuid": "^10.0.0",
    "winston": "^3.15.0",
    "yaml": "^2.5.1",
    "zod": "^3.24.1"
  },
  "keywords": [
    "content-generation",
    "llm-processing",
    "text-generation",
    "content-workflows",
    "prompt-engineering",
    "template-system",
    "microservice",
    "typescript"
  ],
  "author": "aiponge",
  "license": "MIT",
  "devDependencies": {
    "@aiponge/test-utils": "*",
    "@types/handlebars": "^4.0.40"
  }
}
