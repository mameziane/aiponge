# Aiponge AI Analytics Service - Environment Variables
# Source of truth: packages/platform-core/src/config/environment-config.ts

# =============================================================================
# Core Configuration
# =============================================================================

NODE_ENV=development
# PORT is auto-configured from service-manifest

# =============================================================================
# Database (Required - falls back to DATABASE_URL in development)
# =============================================================================

AI_ANALYTICS_DATABASE_URL=postgresql://user:password@localhost:5432/aiponge_ai_analytics
# DATABASE_URL=postgresql://user:password@localhost:5432/aiponge

# =============================================================================
# Authentication (Required)
# =============================================================================

# JWT signing secret (min 32 chars)
JWT_SECRET=your-secure-jwt-secret-min-32-chars

# Secret for inter-service communication
INTERNAL_SERVICE_SECRET=your-internal-service-secret-here

# AES-256-GCM key for data encryption
ENTRY_ENCRYPTION_KEY=your-entry-encryption-key-here

# =============================================================================
# AI Providers
# =============================================================================

# OpenAI (GPT)
# OPENAI_API_KEY=your-openai-api-key

# Anthropic (Claude)
# ANTHROPIC_API_KEY=your-anthropic-api-key

# Google AI (Gemini)
# GOOGLE_API_KEY=your-google-api-key

# =============================================================================
# Redis (Optional - for caching and buffering)
# =============================================================================

# REDIS_URL=redis://localhost:6379
# CACHE_TTL=3600

# =============================================================================
# Service Discovery
# =============================================================================

SERVICE_HOST=localhost

# =============================================================================
# CORS Configuration
# =============================================================================

# CORS_ALLOWED_ORIGINS=http://localhost:5000,http://localhost:3000

# =============================================================================
# Monitoring & Error Tracking
# =============================================================================

SENTRY_DSN=
# ANALYTICS_SERVICE_API_KEY=

# =============================================================================
# Logging
# =============================================================================

LOG_LEVEL=info

# =============================================================================
# OpenTelemetry Distributed Tracing
# =============================================================================

OTEL_TRACING_ENABLED=false
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces
