{
  "name": "@aiponge/api-gateway",
  "version": "1.0.0",
  "description": "API Gateway - Central routing and request orchestration",
  "type": "module",
  "main": "src/main.ts",
  "scripts": {
    "dev": "NODE_OPTIONS=\"--conditions=development\" tsx src/main.ts",
    "dev:watch": "NODE_OPTIONS=\"--conditions=development\" tsx watch src/main.ts",
    "build": "node esbuild.config.mjs",
    "build:tsc": "tsc",
    "start": "node dist/main.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "lint:check": "eslint 'src/**/*.ts' --quiet",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "type-check": "tsc --noEmit --strict",
    "quality-check": "npm run lint:check && npm run format:check && npm run type-check",
    "architectural-lint": "node ../../../scripts/architectural-lint.js",
    "full-quality-check": "npm run quality-check && npm run architectural-lint",
    "health-check": "curl -f http://localhost:${API_GATEWAY_PORT:-8080}/health || exit 1",
    "docker:build": "docker build -t aiponge/api-gateway .",
    "docker:run": "docker run -p ${API_GATEWAY_PORT:-8080}:${API_GATEWAY_PORT:-8080} -e API_GATEWAY_PORT=${API_GATEWAY_PORT:-8080} aiponge/api-gateway"
  },
  "dependencies": {
    "@aiponge/platform-core": "*",
    "@aiponge/shared-contracts": "*",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.21.1",
    "express-rate-limit": "^7.4.1",
    "express-session": "^1.17.3",
    "helmet": "^8.1.0",
    "http-proxy-middleware": "^3.0.5",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "opossum": "^9.0.0",
    "prom-client": "^15.1.3",
    "rate-limit-redis": "^4.3.1",
    "uuid": "^10.0.0",
    "winston": "^3.15.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/express-session": "^1.17.10",
    "@types/opossum": "^8.1.9",
    "@types/supertest": "^6.0.3",
    "supertest": "^7.1.4",
    "@aiponge/test-utils": "*"
  },
  "keywords": [
    "microservice",
    "api-gateway",
    "routing",
    "aiponge"
  ],
  "author": "aiponge Team",
  "license": "MIT"
}
