# Aiponge System Service - Environment Variables
# Source of truth: packages/platform-core/src/config/environment-config.ts

# =============================================================================
# Core Configuration
# =============================================================================

NODE_ENV=development
HOST=0.0.0.0

# =============================================================================
# Database (Required - strict isolation, no DATABASE_URL fallback)
# =============================================================================

SYSTEM_DATABASE_URL=postgresql://user:password@localhost:5432/aiponge_system
# DATABASE_SSL=false
# DB_POOL_SIZE=10
# DB_CONNECTION_TIMEOUT=30000
# DB_QUERY_TIMEOUT=30000
# DB_RETRIES=3

# =============================================================================
# Authentication (Required)
# =============================================================================

# JWT signing secret (min 32 chars)
JWT_SECRET=your-secure-jwt-secret-min-32-chars

# Secret for inter-service communication
INTERNAL_SERVICE_SECRET=your-internal-service-secret-here

# AES-256-GCM key for data encryption
ENTRY_ENCRYPTION_KEY=your-entry-encryption-key-here

# =============================================================================
# Redis (Required for caching and pub/sub)
# =============================================================================

REDIS_URL=redis://localhost:6379
# REDIS_TTL=3600

# =============================================================================
# Service Discovery
# =============================================================================

SERVICE_HOST=localhost

# =============================================================================
# CORS Configuration
# =============================================================================

# ALLOWED_ORIGINS=http://localhost:5000,http://localhost:3000

# =============================================================================
# Health Checks
# =============================================================================

# HEALTH_CHECK_INTERVAL_DEV=30000
# HEALTH_CHECK_INTERVAL_PROD=60000
# HEALTH_CHECK_TIMEOUT=5000
# HEALTH_CHECK_RETRIES=3

# =============================================================================
# Monitoring & Error Tracking
# =============================================================================

SENTRY_DSN=
# ANALYTICS_SERVICE_API_KEY=

# =============================================================================
# Logging
# =============================================================================

LOG_LEVEL=info

# =============================================================================
# OpenTelemetry Distributed Tracing
# =============================================================================

OTEL_TRACING_ENABLED=false
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces
