{
  "name": "@aiponge/system-service",
  "version": "1.0.0",
  "description": "Consolidated System Service - Discovery, Monitoring, and Notification services",
  "type": "module",
  "main": "src/main.ts",
  "scripts": {
    "dev": "NODE_OPTIONS=\"--conditions=development\" tsx src/main.ts",
    "dev:watch": "NODE_OPTIONS=\"--conditions=development\" tsx watch src/main.ts",
    "typecheck": "tsc --noEmit",
    "generate:manifest": "tsx scripts/generate-service-manifest.ts",
    "prebuild": "npm run generate:manifest",
    "build": "node esbuild.config.mjs",
    "start": "node dist/main.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "lint:check": "eslint 'src/**/*.ts' --quiet",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "type-check": "tsc --noEmit --strict",
    "quality-check": "npm run lint:check && npm run format:check && npm run type-check",
    "architectural-lint": "node ../../../scripts/architectural-lint.js",
    "full-quality-check": "npm run quality-check && npm run architectural-lint",
    "health-check": "curl -f http://localhost:${SYSTEM_SERVICE_PORT:-3001}/health || exit 1",
    "docker:build": "docker build -t aiponge/system-service .",
    "docker:run": "docker run -p ${SYSTEM_SERVICE_PORT:-3001}:${SYSTEM_SERVICE_PORT:-3001} -e SYSTEM_SERVICE_PORT=${SYSTEM_SERVICE_PORT:-3001} aiponge/system-service"
  },
  "dependencies": {
    "@aiponge/platform-core": "*",
    "@aiponge/shared-contracts": "*",
    "axios": "^1.13.6",
    "bullmq": "^5.70.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^17.3.1",
    "drizzle-orm": "^0.45.1",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "node-cron": "^4.2.1",
    "postgres": "^3.4.7",
    "twilio": "^5.12.2",
    "uuid": "^13.0.0",
    "winston": "^3.15.0",
    "ws": "^8.17.1",
    "zod": "^4.3.6"
  },
  "keywords": [
    "microservice",
    "system-service",
    "integrated-discovery",
    "monitoring",
    "notifications",
    "health-checks",
    "alerting",
    "email",
    "sms",
    "push",
    "consolidated"
  ],
  "author": "aiponge Team",
  "license": "MIT",
  "devDependencies": {
    "@aiponge/test-utils": "*"
  }
}
